<%- include("../components/header") -%>

<body>

    <!-- SECTION: Navbar -->
    <%- include("../components/navbar/navbar") -%>
    <div class="main">
        <section class="sign-in">

            <!-- SECTION: Conteiner -->
            <div class="container">
                <div class="signin-content" style="padding: 0; margin-bottom: 10%;">
                    <div class="signin-form" style="margin:0 auto;">
                        <h5 class="form-title center-align">Update your password</h5>
                        <br>
                        <div class="row">
                            <!-- SECTION: Fields -->
                            <form id="resetPasswordForm" action="/password/reset" method="POST" class="col s12">
                                <div class="row">
                                    <p>Update your password for your account</p>
                                </div>
                                <br>
                                <div class="row input-field">
                                    <i class="material-icons prefix">vpn_key</i>
                                    <input name="password" id="password" type="password" class="validate">
                                    <label for="password">Password</label>
                                </div>
                                <div class="row input-field">
                                    <i class="material-icons prefix">vpn_key</i>
                                    <input name="re_pass" id="re_pass" type="password" class="validate">
                                    <label for="re_pass">Repeat your password</label>
                                </div>
                                <div class="form-group form-button center">
                                    <button class="btn waves-effect waves-light" type="submit">
                                        Update Password
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
<%- include("../components/footer") -%>