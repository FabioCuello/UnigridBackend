<%- include("../components/header") -%>

<body>
    <!-- SECTION: Navbar-->
    <%- include("../components/navbar/navbar") -%>
    <div class="main">
        <section class="signup">

            <!-- SECTION: Container -->
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h5 class="form-title center">Register into UniGrid</h5>
                        <div class="divider"></div>
                        <div class="formContainer">
                            <form id="formRegister" class="col s12">

                                <!-- SECTION: Fields -->
                                <div class="row">
                                    <div class="input-field col s6">
                                        <i class="material-icons prefix">account_circle</i>
                                        <input id="firstName" name="firstName" type="text" class="validate">
                                        <label for="firstName">Fists Name</label>
                                    </div>
                                    <div class="input-field col s6">
                                        <input id="lastName" name="lastName" type="text" class="validate">
                                        <label for="lastName">Last Name</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <i class="material-icons prefix">mail</i>
                                        <input id="email" name="email" type="email" class="validate">
                                        <label for="email">Email</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <i class="material-icons prefix">vpn_key</i>
                                        <input name="password" id="password" type="password" class="validate">
                                        <label for="password">Password</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <i class="material-icons prefix">vpn_key</i>
                                        <input name="re_pass" id="re_pass" type="password" class="validate">
                                        <label for="re_pass">Repeat your password</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <p>
                                            <label>
                                                <input id="alerts" name="alerts" type="checkbox" />
                                                <span>
                                                    Subscribe to alarms</span>
                                            </label>
                                        </p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <p>
                                            <label>
                                                <input id="newsletter" name="newsletter" type="checkbox" />
                                                <span>Subscribe to daily newsletters</span>
                                            </label>
                                        </p>
                                    </div>
                                </div>
                                <div class="form-group form-button center">
                                    <button class="btn waves-effect waves-light" type="submit">Join
                                        <i class="material-icons right">send</i>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="signup-image">
                        <figure style="vertical-align: middle"><img src="images/Logo_uninorte_colombia.jpg"
                                alt="sing up image"></figure>
                        <a href="/login" class="signup-image-link">I already have an account</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>

<%- include("../components/footer") -%>